<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="420.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.UserController">
	<top>
		<VBox>
			<HBox alignment="CENTER" spacing="10">
				<padding>
					<Insets bottom="10" top="10" />
				</padding>
            <children>
               <Label text="User name: " />
               <TextField fx:id="userNameTextField" />
            </children>
			</HBox>
		</VBox>
	</top>
	<center>
		<VBox alignment="CENTER">
			<padding>
				<Insets left="10" right="10" />
			</padding>
			<ImageView fx:id="originalFrame" />
		</VBox>
	</center>
	<right>
      <ScrollPane>
         <content>
            <VBox fx:id="userImages" alignment="CENTER_LEFT" prefHeight="323.0" prefWidth="198.0" spacing="10">
         
      </VBox>
         </content>
      </ScrollPane>
   </right>
	<bottom>
		<HBox alignment="center" spacing="20.0">
			<Button fx:id="cameraButton" alignment="CENTER" layoutX="240.0" layoutY="15.0" mnemonicParsing="false" onAction="#startCamera" prefHeight="35.0" prefWidth="95.0" text="Start Camera" />
         <Button fx:id="savePhotoButton" mnemonicParsing="false" onAction="#savePhoto" prefHeight="37.0" prefWidth="83.0" text="Save Photo">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
         <Button fx:id="trainingButton" mnemonicParsing="false" onAction="#train" prefHeight="36.0" prefWidth="99.0" text="Training" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
		</HBox>
	</bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <left>
      <AnchorPane prefHeight="300.0" prefWidth="126.0" BorderPane.alignment="CENTER">
         <children>
            <VBox layoutX="6.0" layoutY="8.0" prefHeight="216.0" prefWidth="126.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <TitledPane fx:id="classifierPane" animated="false" collapsible="false" prefHeight="143.0" prefWidth="126.0" text="Classifiers:">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox layoutX="19.6" layoutY="19.6" prefHeight="79.0" prefWidth="124.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <Label text="Haar Classifiers:" />
                                    <RadioButton fx:id="haarFrontalFaceAlt" mnemonicParsing="false" onAction="#selectClassifier" selected="true" text="Frontal Face">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="detClassifier" />
                                       </toggleGroup>
                                    </RadioButton>
                                    <Separator prefHeight="23.0" prefWidth="105.0" />
                                    <Label text="LBP Classifier:" />
                                    <RadioButton fx:id="lbpFrontalFace" mnemonicParsing="false" onAction="#selectClassifier" text="Frontal Face" toggleGroup="$detClassifier" />
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                    </content>
                  </TitledPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </left>

</BorderPane>
